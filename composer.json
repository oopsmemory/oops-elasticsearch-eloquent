{
    "name": "oopsmemory/oops-elasticsearch-eloquent",
    "type": "library",
    "description": "Elasticsearch functionality like Laravel Eloquent models.",
    "keywords": ["elasticsearch", "eloquent"],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "elasticsearch/elasticsearch": "^8.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Isswp101\\Persimmon\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Isswp101\\Persimmon\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "vendor/bin/phpcs src tests",
        "fix-style": "vendor/bin/phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
